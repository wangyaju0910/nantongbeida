Page{
  background-color: #f5f5f5;
}
.apply-enter{
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
  background-color: #fff;
  margin: 30rpx 0 0 0;
}
.apply-enter .apply-list{
  display: flex;
  padding: 20rpx;
  border: 1px solid #f5f5f5;
}
.apply-list view{
  flex: 1;
  height: 50rpx;
  line-height: 50rpx;
}
.apply-list input{
  flex: 3;
}
.uplaod-pic{
  background-color: #fff;
  font-size: 25rpx;
  display: flex;
  width: 100%;
  padding: 30rpx 20rpx;
}
.shangye-pic {
  width: 50%;
}
.shangye-pic .shangye-img{
  width: 330rpx;
  height: 200rpx;
  margin-top: 30rpx;
} 
.shangye-img image{
  width: 100%;
  height: 100%;
}
.uplaod-pic .shangye-pic:nth-child(2) .shangye-title{
  color: #fff;
}
.upload-button{
  width: 95%;
  height: 70rpx;
  background-color: rgb(255, 85, 85);
  color:#fff;
  font-size: 30rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 10rpx;
  margin-top: 80rpx;
  margin-left: 20rpx;
}
.reminder{
  font-size: 20rpx;
  color: #ccc;
  padding: 0 20rpx;
  position: fixed;
  bottom: 20rpx;
  left: 0rpx;
}
.birthday-mask {
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.616);
  z-index: 1;
}

.birthday {
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 540rpx;
  background-color: #fff;
  text-align: center;
}
.button{
  font-size: 35rpx;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #f5f5f5;
}
.button view:nth-child(1){
  float: left;
  color: rgb(181, 181, 181);
}
.button view:nth-child(2){
  float: right;
  color:rgb(30, 193, 29);
}
.clearfix:after {
content: ".";
display: block;
height: 0;
clear: both;
visibility: hidden;
}