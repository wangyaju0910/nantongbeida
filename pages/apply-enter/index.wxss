
.apply-enter{
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
  background-color: #fff;
  margin: 30rpx 0 0 0;
}
.apply-enter .apply-list{
  display: flex;
  padding: 20rpx;
  border: 1px solid #f5f5f5;
}
.apply-list view{
  flex: 1;
  height: 50rpx;
  line-height: 50rpx;
}
.apply-list input{
  flex: 3;
}
.uplaod-pic{
  background-color: #fff;
  font-size: 25rpx;
  display: flex;
  width: 100%;
  padding: 30rpx 20rpx;
}
.shangye-pic {
  width: 50%;
}
.shangye-pic .shangye-img{
  width: 330rpx;
  height: 200rpx;
  margin-top: 30rpx;
} 
.shangye-img image{
  width: 100%;
  height: 100%;
}
.upload-button{
  width: 95%;
  height: 70rpx;
  background-color: rgb(255, 85, 85);
  color:#fff;
  font-size: 30rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 10rpx;
  margin-top: 150rpx;
  margin-left: 20rpx;
}