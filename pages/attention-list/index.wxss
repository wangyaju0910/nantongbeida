Page {
  background-color: #f5f5f5;
}

.obligation-list {
  font-size: 25rpx;
  background-color: #fff;
  margin-top: 30rpx;
}

.obligation-content {
  display: flex;
  padding: 20rpx;
}

.obligation-content .content-img {
  width: 200rpx;
  height: 170rpx;
}

.content-img image {
  width: 100%;
  height: 100%;
}

.obligation-content .content-title {
  padding-left: 20rpx;
}

.content-price {
  display: flex;
  color:rgb(255, 85, 85);
  margin-top: 30rpx;
}


.obligation-content .xuanzhong-img{
  width: 40rpx;
  height: 30rpx;
  margin: auto auto;
  margin-right: 20rpx;
}
.xuanzhong-img image{
  width: 100%;
  height: 100%;
}
.obligation-title{
  padding: 20rpx;
} 
.quanxuan{
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.quanxuan image{
  width: 100%;
  height: 100%;
}
.shop-name{
  display: flex;
}
.shop-name .shop-img{
  width: 37rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.shop-img image{
  width: 100%;
  height: 100%;
}
.obligation-title{
  display: flex;
}
.amount-price {
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;

}
.amount-price .amount {
  padding: 20rpx 0;
  float: right;
  margin-right: 20rpx;
}
.price {
  display: inline-block;
  color:rgb(255, 85, 85);
}


.clearfix:after {
  content: ".";
  display: block;
  visibility: hidden;
  clear: both;
  height: 0;
}

.button{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  font-size: 25rpx;
  display: flex;
}
.footer-quanxuan{
  flex: 1;
  display: flex;
  margin: auto 0;
}
.footer-quanxuan .quanxuan-button{
  width: 30rpx;
  height: 30rpx;
  margin: 0 20rpx;
}
.quanxuan-button image{
  width: 100%;
  height: 100%;
}
.footer-button{
  display: flex;
}
.footer-button view{
  width: 135rpx;
  height: 58rpx;
  border: 1px solid #ccc;
  text-align: center;
  line-height: 58rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

