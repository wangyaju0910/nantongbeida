.nb-sousuo {
  display: flex;
  font-size: 24rpx;
  color: #ccc;
  text-indent: 32rpx;
}

.sousuo-content {
  display: flex;
  align-items: center;
  width: 90%;
  height: 55rpx;
  background-color: #f5f5f5;
  border-radius: 15rpx;
  margin: 20rpx auto;
}

.sousuo-img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.sousuo-img image {
  width: 100%;
  height: 100%;
}
.header-nav{
  width: 187%;
  display: flex;
  border-top: 1px solid #e6e6e6;
  font-size: 30rpx;
  overflow: hidden;
  padding-left: 20rpx;
}
.header-nav view{
  width: 8%;
  text-align: center;
  margin-top: 20rpx;
}
.header-nav view:nth-child(1){
  color:red;
}

.recomment-list{
  display: flex;
  flex-wrap: wrap;
  background-color: #f7f7f7;
  padding: 20rpx;
  font-size: 25rpx;
  margin-top: 20rpx;
}
.recomment-list .recomment-content{
  width: 48%;
  margin-right: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.recomment-list .recomment-content:nth-child(2n){
  margin-right: 0;
}
.recomment-content .recomment-img{
  width: 100%;
  height: 325rpx;
  position: relative;
}
.recomment-img image{
  width: 100%;
  height: 100%;
}
.recomment-img .fenxiang{
  width: 90rpx;
  height: 35rpx;
  position: absolute;
  top:0;
  right: 0;
}
.fenxiang image{
  width: 100%;
  height: 100%;
  /* position: relative; */
}

.recomment-content .video-bofang{
  width: 90rpx;
  height: 90rpx;
  position: absolute;
  top:38%;
  left: 36%;
}
.video-bofang image{
  width: 100%;
  height: 100%;
}
.recomment-text{
  padding: 10rpx;
}
.recomment-text .text-img{
  width: 25rpx;
  height: 25rpx;
  /* background-color: red; */
  margin-right: 10rpx;
  }
  .text-img image{
    width: 100%;
    height: 100%;
  }
  .recomment-content .text-title{
    overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  }
  .store-title{
    display: flex;
    margin-top: 10rpx;
  }
  .store-title view:nth-child(1){
    flex: 3;
  }
  .store-title view:nth-child(2){
    flex: 1;
    display: flex;
  }
  .store-img{
    margin-right: 10rpx;
  }
  .tabBar{
    font-size: 30rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    display: flex;
    background-color: #fff;
    padding: 10rpx 0;
    color:#999;
  }
  .tabBar .tabBar-list{
    flex: 1;
    text-align: center;
  }
   .tabBar .tabBar-list:nth-child(2){
     color:red;
   }
  .tabBar .tabBar-img{
    width: 40rpx;
    height: 40rpx;
    margin: 10rpx auto;
  }
  .tabBar-img image{
    width: 100%;
    height: 100%;
  }
  Page{
  padding-bottom: 100rpx;
}