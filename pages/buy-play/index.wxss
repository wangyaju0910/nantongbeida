Page{
  height: 100%;
  width: 100%;
}
.video-play {
  height: 100%;
  width: 100%;
}

.video-play .video {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
}

.video-play .video image {
  width: 100%;
  height: 100%;
}

.small-icon {
  position: absolute;
  top: 400rpx;
  left: 0rpx;
  color: #fff;
  font-size: 24rpx;
  margin-left: 10rpx;
  text-align: center;
}
.iconone{
  margin: 50rpx 0;
}
.iconone .iconone-img {
  width: 46rpx;
  height: 46rpx;
}

.iconone-img image {
  width: 100%;
  height: 100%;
}
.buy-video{
  position: absolute;
  bottom: 0;
  left: 0;
  font-size: 25rpx;
  background-color: #fff;
  width: 100%;
}
.buy-content{
  display: flex;
}
.buy-video .video-list{
  display: flex;
  border: 1px solid #999;
  border-radius: 10rpx;
  width: 50%;
  margin: 30rpx 20rpx;
}
.buy-video .video-list .video-img{
  width: 240rpx;
  height: 122rpx;
}
.video-img image{
  width: 100%;
  height: 100%;
}
.video-content{
  padding: 0 10rpx;
}
.video-content .content-title{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 25rpx;
}
.video-content .content-price{
  color: rgb(255, 85, 85);
}
.button button{
  width: 95%;
  border-radius: 10rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  margin-bottom: 30rpx;
}
.button button:nth-child(1){
  background-color: rgb(255, 85, 85);
  color:#fff;
}