.nb-sousuo {
  display: flex;
  font-size: 24rpx;
  color: #ccc;
  text-indent: 32rpx;
}

.sousuo-content {
  display: flex;
  align-items: center;
  width: 90%;
  height: 55rpx;
  background-color: #f5f5f5;
  border-radius: 15rpx;
  margin: 10rpx auto;
}

.sousuo-img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.sousuo-img image {
  width: 100%;
  height: 100%;
}
.user-label {
  display: flex;
  margin: 10rpx  0 10rpx 10rpx;
}

.recomment-list {
  display: flex;
  flex-wrap: wrap;
  padding: 25rpx;
  font-size: 25rpx;
  margin-top: 15rpx;
  border-top: 1px solid #f5f5f5;
}

.recomment-list .recomment-content {
  width: 48%;
  margin-right: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  border: 1px solid #999;
  border-radius: 10rpx;
}

.recomment-list .recomment-content:nth-child(2n) {
  margin-right: 0;
}

.recomment-content .recomment-img {
  width: 100%;
  height: 325rpx;
  position: relative;
}

.recomment-img image {
  width: 100%;
  height: 100%;
}

.recomment-text {
  padding: 10rpx;
  border-top: 1px solid #999;
}

.recomment-text .text-img {
  width: 25rpx;
  height: 25rpx;
  background-color: red;
  margin-right: 10rpx;
}

.text-img image {
  width: 100%;
  height: 100%;
}

.recomment-content .text-title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.store-title {
  display: flex;
  color:rgb(255, 113, 112);
  margin-top: 10rpx;
}

.store-title view:nth-child(1) {
  flex: 2;
}

.store-title view:nth-child(2) {
  flex: 1;
  display: flex;
}

.store-img {
  margin-top: 8rpx;
  font-size: 21rpx;
  color:#999;
}

.tabBar {
  font-size: 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  background-color: #fff;
  padding: 10rpx 0;
  color: #999;
}
