Page {
  background-color: #f5f5f5;
}

.discount-nav {
  display: flex;
  font-size: 25rpx;
  padding-top: 30rpx;
  background-color: #fff;
}

.discount-nav view {
  flex: 1;
  text-align: center;
  padding-bottom: 30rpx;
}

.discount-nav view:nth-child(2) {
  color: rgb(255, 84, 84);
  border-bottom: 2px solid rgb(255, 84, 84);
}

.discount-content {
  width: 95%;
  height: 210rpx;
  display: flex;
  font-size: 35rpx;
  margin: 30rpx auto;
  border-radius: 10rpx;
  background-color: #fff;
}

.content-left {
  width: 85%;
  height: 100%;
  position: relative;
}

.content-left .left-img {
  width: 100%;
  height: 100%;
}

.left-img image {
  width: 100%;
  height: 100%;
}

.content-right {
  width: 30%;
  height: 100%;
}

.content-right view {
  width: 100%;
  height: 50%;
}

.content-right view:nth-child(1) {
  color: rgb(255, 84, 84);
  text-align: center;
  padding-top: 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f5f5f5;
}

.content-right view:nth-child(2) {
  color: #ccc;
  font-size: 20rpx;
  text-align: center;
  padding-top: 30rpx;
}

.left-content {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  font-size: 25rpx;
  color: rgb(255, 204, 204);
  padding: 20rpx;
}

.content-title {
  display: flex;
  /* line-height: 40rpx; */
}    

.content-title view:nth-child(1) {
  /* flex: 1; */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  color: #fff;
  font-size: 30rpx;
  width: 70%;
}
.content-title view:nth-child(2){
  background-color: #fff;
  color:rgb(255, 84, 84);
  border-radius: 20rpx;
  padding: 0 10rpx;
  margin-left: 41rpx;
  margin-top: 8rpx;
  height: 32rpx;
}
.content-timer{
  margin: 20rpx 0;
}