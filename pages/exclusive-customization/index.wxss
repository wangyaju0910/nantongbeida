
.apply-enter{
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
  background-color: #fff;
  margin: 30rpx 0 0 0;
}
.apply-enter .apply-list{
  display: flex;
  padding: 20rpx;
  border: 1px solid #f5f5f5;
}
.apply-list view{
  flex: 1;
  height: 50rpx;
  line-height: 50rpx;
}
.apply-list input{
  flex: 3;
}
.uplaod-pic{
  font-size: 25rpx;
  padding: 20rpx 15rpx;
}
.uplaod-pic .pic-title{
  display: flex;
}
.pic-title view:nth-child(1){
  flex: 3;
}
.pic-title view:nth-child(2){
  flex: 1;
  color:#999;
  font-size: 20rpx;
}
.uplaod-pic .pic-img{
  width: 152rpx;
  height: 150rpx;
  margin-top: 30rpx;
}
.pic-img image{
  width: 100%;
  height: 100%;
}
.upload-button{
  width: 95%;
  height: 70rpx;
  background-color: rgb(255, 85, 85);
  color:#fff;
  font-size: 30rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 10rpx;
  position: fixed;
  bottom: 40rpx;
  left: 20rpx;
}