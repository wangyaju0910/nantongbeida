.apply-enter {
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
  background-color: #fff;
  margin: 30rpx 0 0 0;
}

.apply-enter .apply-list {
  display: flex;
  padding: 20rpx;
  border: 1px solid #f5f5f5;
}

.apply-list view {
  flex: 1;
  height: 50rpx;
  line-height: 50rpx;
}

.apply-list input {
  flex: 3;
}

.upload-button {
  width: 95%;
  height: 70rpx;
  background-color: rgb(255, 85, 85);
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 10rpx;
  margin-top: 100rpx;
  margin-left: 20rpx;
}

.birthday-mask {
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.616);
  z-index: 1;
}

.birthday {
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  background-color: #fff;
  text-align: center;
}
.button{
  font-size: 35rpx;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #f5f5f5;
}
.button view:nth-child(1){
  float: left;
  color: rgb(181, 181, 181);
}
.button view:nth-child(2){
  float: right;
  color:rgb(30, 193, 29);
}
.clearfix:after {
content: ".";
display: block;
height: 0;
clear: both;
visibility: hidden;
}