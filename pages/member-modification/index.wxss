
.apply-enter{
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
  background-color: #fff;
  margin: 30rpx 0 0 0;
}
.apply-enter .apply-list{
  display: flex;
  padding: 20rpx;
  border: 1px solid #f5f5f5;
}
.apply-list view:nth-child(1){
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.apply-list view:nth-child(2){
  line-height: 47rpx;
}
.apply-list input{
  flex: 3;
}
.upload-button{
  width: 95%;
  height: 70rpx;
  background-color: rgb(255, 85, 85);
  color:#fff;
  font-size: 30rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 10rpx;
  margin-top: 100rpx;
  margin-left: 20rpx;
}