.user-message {
  height: 350rpx;
  background-color: rgb(255, 96, 96);
  display: flex;
  flex-direction: column;
  position: relative;
}

.user {
  color: #fff;
  font-size: 30rpx;
  margin: 60rpx auto;
  text-align: center;
}

.user-message .user-pic {
  width: 90rpx;
  height: 90rpx;
  margin-left: 36rpx;
}

.user-pic image {
  width: 100%;
  height: 100%;
}

.common-member {
  font-size: 20rpx;
  background-color: #fff;
  color: rgb(255, 96, 96);
  padding: 0 10rpx;
  border-radius: 20rpx;
}

.user-name {
  margin: 10rpx 0;
}

.integral {
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
  font-size: 25rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.3);
}

.integral-num {
  flex: 1;
  color: rgb(255, 240, 0);
}

.integral-conversion {
  border: 1px solid #fff;
  padding: 0 20rpx;
  border-radius: 20rpx;
}

.my-order {
  padding: 0 20rpx;
  background-color: #fff;
}

.order-title {
  font-size: 30rpx;
  display: flex;
  border-bottom: 1px solid #f5f5f5;
  padding: 30rpx 0;
}

.order-title .title-img {
  width: 34rpx;
  height: 43rpx;
  margin-right: 25rpx;
}

.title-img image {
  width: 100%;
  height: 100%;
}

.order-nav {
  display: flex;
  font-size: 30rpx;
  padding: 30rpx 0;
}

.order-nav>view {
  flex: 1;
  text-align: center;
}

.order-nav .nav-img {
  width: 70rpx;
  height: 65rpx;
  margin-left: 55rpx;
  margin-bottom: 25rpx;
}

.nav-img image {
  width: 100%;
  height: 100%;
}

Page {
  background-color: #f5f5f5;
  padding-bottom: 90rpx;
}

.special-button {
  position: fixed;
  bottom: 150rpx;
  right: 25rpx;
}

.special-button .customization {
  width: 86rpx;
  height: 86rpx;
}

.special-button .customization:nth-child(1) {
  margin-bottom: 20rpx;
}

.customization image {
  width: 100%;
  height: 100%;
}

.tabBar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  font-size: 25rpx;
  color: #ccc;
  background-color: #fff;
  display: flex;
  padding: 10rpx 0 10rpx 0;
  border-top: 1px solid #f5f5f5;
}

.tabBar .tabBar-list {
  flex: 1;
  text-align: center;
}

.tabBar-list .tabBar-img {
  width: 40rpx;
  height: 40rpx;
  margin-left: 75rpx;
}

.tabBar-img image {
  width: 100%;
  height: 100%;
}

.tabBar-list:nth-child(4) .tabBar-title {
  color: rgb(255, 85, 85);
}

.skip-list {
  display: flex;
  font-size: 30rpx;
}
.skip-page {
  background-color: #fff;
  margin-top: 30rpx;
  padding: 0 30rpx;
}

.list {
  width: 100%;
  display: flex;
  padding: 25rpx 0;
  border-bottom: 1px solid #f5f5f5;
}

.list>view:nth-child(1) {
  display: flex;
  flex: 1;
}

.list-img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 25rpx;
}

.list-img image {
  width: 100%;
  height: 100%;
}

.gengduo-img {
  width: 24rpx;
  height: 34rpx;
}

.gengduo-img image {
  width: 100%;
  height: 100%;
}
