Page {
  background-color: #f5f5f5;
}

.order-list {
  font-size: 30rpx;
  display: flex;
  background-color: #fff;
  border-top: 1px solid #f5f5f5;
  padding: 20rpx 30rpx 0 30rpx;
}

.order-list>.no{
  flex: 1;
  text-align: center;
  padding-left: 95rpx;
}
.no view{
  width: 160rpx;
  height: 70rpx;
  text-align: center;
}
.order-list .no:nth-child(1) view{
  color: rgb(255, 85, 85);
  border-bottom: 2px solid rgb(255, 85, 85);
}

.obligation-list {
  font-size: 25rpx;
  background-color: #fff;
  margin-top: 30rpx;
}

.obligation-list .obligation-title {
  display: flex;
  width: 100%;
  padding: 20rpx 15rpx;
  border-bottom: 1px solid #f5f5f5;
}

.obligation-title view:nth-child(1) {
  flex: 6;
}

.obligation-title view:nth-child(2) {
  flex: 1;
  color: rgb(255, 85, 85);
}

.obligation-content {
  display: flex;
  padding: 20rpx;
}

.obligation-content .content-img {
  width: 200rpx;
  height: 170rpx;
}

.content-img image {
  width: 100%;
  height: 100%;
}

.obligation-content .content-title {
  padding-left: 20rpx;
}

.content-title .versions-versions {
  font-size: 20rpx;
  color: #999;
  margin: 20rpx 0;
}

.content-price {
  display: flex;
  margin-top: 30rpx;
}

.content-price view:nth-child(1) {
  flex: 7;
}

.content-price view:nth-child(2) {
  flex: 1;
}
.amount-price {
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;

}
.amount-price .amount {
  padding: 20rpx 0;
  float: right;
  margin-right: 20rpx;
}
.price {
  display: inline-block;
  color:rgb(255, 85, 85);
}
.button {
  /* display: flex; */
  float: right;
}

.button view {
  display: inline-block;
  width: 100rpx;
  text-align: center;
  font-size: 25rpx;
  border: 1px solid #ccc;
  padding: 15rpx 20rpx;
  margin: 20rpx 15rpx;
}

.clearfix:after {
  content: ".";
  display: block;
  visibility: hidden;
  clear: both;
  height: 0;
}
