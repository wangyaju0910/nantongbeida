Page{
  background-color: #f5f5f5;
}
.order-list {
  font-size: 30rpx;
  display: flex;
  background-color: #fff;
  border-top: 1px solid #f5f5f5;
  padding: 20rpx 0 0 0;
}

.order-list view {
  flex: 1;
  text-align: center;
  padding-bottom: 20rpx;
}

.order-list view:nth-child(1) {
  color: rgb(255, 85, 85);
  border-bottom: 2px solid rgb(255, 85, 85);
}
.order-content{
  font-size: 25rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 200rpx auto;
}
.order-content .content-img{
  width: 580rpx;
  height: 290rpx;

}
.content-img image{
  width: 100%;
  height: 100%;
}
.no-order{
  font-size: 20rpx;
  color:#999;
}
.stroll-around{
  border:1px solid rgb(255, 85, 85);
  color:rgb(255, 85, 85);
  padding: 15rpx 90rpx;
  margin-top: 25rpx;
}