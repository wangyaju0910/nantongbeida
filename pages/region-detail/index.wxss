Page {
  background-color: #f5f5f5;
}

swiper {
  height: 290rpx;
}

swiper swiper-item {
  width: 100%;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.swiper {
  width: 95%;
  height: 230rpx;
  margin:25rpx auto 15rpx;
}

.swiper image {
  border-radius: 20rpx;
}

.region-content {
  width: 90%;
  position: absolute;
  top: 30%;
  left: 5%;
  display: flex;
  font-size: 30rpx;
  color: #fff;
}

.region-title {
  flex: 15;
}

.region-go {
  flex: 1;
  font-size: 50rpx;
  margin-top: 16rpx;
}

.title {
  font-size: 35rpx;
}

.recomment-list {
  display: flex;
  flex-wrap: nowrap;
  background-color: #f7f7f7;
  padding: 0 20rpx;
  font-size: 26rpx;
}

.recomment-list .recomment-content {
  width: 33.33%;
  margin-right: 10rpx;
  background-color: #fff;
  border: 1px solid #999;
  border-radius: 10rpx;
}

.recomment-content .recomment-img {
  width: 100%;
  height: 230rpx;
  position: relative;
}

.recomment-img image {
  width: 100%;
  height: 100%;
}

.recomment-text {
  padding: 10rpx;
}

.recomment-content .text-title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  font-size: 20rpx;
}
Page{
  padding-bottom: 100rpx;
}