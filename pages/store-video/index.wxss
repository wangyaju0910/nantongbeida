.business-district {
  display: flex;
  flex-direction: column;
  font-size: 35rpx;
  padding: 0 50rpx;
}

.business-district .user-message {
  display: flex;
  align-items:center;
}
.user-title{
  color:rgb(255, 85, 85);
  margin-left: 20rpx;
}
.business-district .user-message .user-img {
  width: 134rpx;
  height: 130rpx;
}

.user-img image {
  width: 100%;
  height: 100%;
}

.user-introduce {
  color: rgb(133, 133, 133);
  margin: 30rpx 0;
}

.user-localtion {
  display: flex;
}

.user-localtion .localtion-img {
  width: 37rpx;
  height: 45rpx;
  margin-right: 20rpx;
}

.localtion-img image {
  width: 100%;
  height: 100%;
}
.localtion-address{
  display: flex;
}
.localtion-address .timer{
  margin-left: 20rpx;
}
.business-time{
  display: flex;
  margin-top: 20rpx;
}
.business-time .business-img{
  width: 44rpx;
  height: 45rpx;
}
.business-img image {
  width: 100%;
  height: 100%;
}
.business-content{
  display: flex;
  margin-left: 20rpx;
}
.business-content .timer{
  margin-left: 20rpx;
}
.recomment-list{
  display: flex;
  flex-wrap: wrap;
  background-color: #f7f7f7;
  padding: 20rpx;
  font-size: 25rpx;
  margin-top: 20rpx;
}
.recomment-list .recomment-content{
  width: 95%;
  margin:0 auto;
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 10rpx; 
}
.recomment-content .recomment-img{
  width: 100%;
  height: 325rpx;
  position: relative;
}
.recomment-img image{
  width: 100%;
  height: 100%;
}
.recomment-img .fenxiang{
  width: 90rpx;
  height: 40rpx;
  position: absolute;
  top:0;
  right: 0;
}
.fenxiang image{
  width: 100%;
  height: 100%;
  /* position: relative; */
}

.recomment-content .video-bofang{
  width: 122rpx;
  height: 115rpx;
  position: absolute;
  top:33%;
  left: 38%;
}
.video-bofang image{
  width: 100%;
  height: 100%;
}
.user-label {
  display: flex;
  margin: 20rpx 0;
}

.user-label view {
  width: 110rpx;
  height: 45rpx;
  background: linear-gradient(to right, rgb(255, 113, 112), pink);
  margin-right: 20rpx;
  text-align: center;
  line-height: 45rpx;
  color: #fff;
  padding: 0 10rpx;
  font-size: 26rpx;
}
.recomment-text{
  padding: 10rpx;
}
.recomment-text .text-img{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  }
  .text-img image{
    width: 100%;
    height: 100%;
  }
  .store-title{
    display: flex;
    margin-top: 10rpx;
    font-size: 30rpx;
  }
  .store-title view:nth-child(1){
    flex: 3;
  }
  .store-img{
    /* margin-right: 10rpx; */
    display: flex;
  }

.tabBar {
  font-size: 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  background-color: #fff;
  padding: 10rpx 0;
  color: #999;
}

.tabBar .tabBar-list {
  flex: 1;
  text-align: center;
}
.tabBar .tabBar-list:nth-child(1) .tabBar-img{
  width: 50rpx;
  height: 35rpx;
}
.tabBar .tabBar-list:nth-child(1) {
  color: red;
}

.tabBar .tabBar-img {
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx auto;
}

.tabBar-img image {
  width: 100%;
  height: 100%;
}
.clearfix:after {
content: ".";
display: block;
height: 0;
clear: both;
visibility: hidden;
}
Page{
  padding-bottom: 100rpx;
}