.nb-sousuo {
  display: flex;
  font-size: 24rpx;
  color: #ccc;
  text-indent: 32rpx;
}

.sousuo-content {
  display: flex;
  align-items: center;
  width: 90%;
  height: 55rpx;
  background-color: #f5f5f5;
  border-radius: 15rpx;
  margin: 20rpx auto;
}

.sousuo-img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.sousuo-img image {
  width: 100%;
  height: 100%;
}
.header-nav{
  width: 187%;
  display: flex;
  border-top: 1px solid #e6e6e6;
  font-size: 30rpx;
  overflow: hidden;
  padding-left: 20rpx;
}
.header-nav view{
  width: 8%;
  text-align: center;
  margin-top: 20rpx;
}
.header-nav view:nth-child(1){
  color:red;
}

.recomment-list{
  display: flex;
  flex-wrap: wrap;
  background-color: #f7f7f7;
  padding: 20rpx;
}
.recomment-list .recomment-content{
  width: 48%;
  margin-right: 20rpx;
  background-color: #fff;
}
.recomment-list .recomment-content:nth-child(2n){
  margin: 0;
}
.recomment-content .recomment-img{
  width: 100%;
  height: 325rpx;
  position: relative;
}
.recomment-img image{
  width: 100%;
  height: 100%;
}
.recomment-img .fenxiang{
  width: 90rpx;
  height: 45rpx;
  position: absolute;
  top:0;
  right: 0;
}
.fenxiang image{
  width: 100%;
  height: 100%;
}
.recomment-content .video-bofang{
  width: 90rpx;
  height: 90rpx;
  position: absolute;
  top:23%;
  left: 19%;
}
.video-bofang image{
  width: 100%;
  height: 100%;
}
